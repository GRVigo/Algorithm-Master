                    </Grid>
                </Grid>

            </TabItem>

        </TabControl>

        <!-- Status stackpanel -->
        <StackPanel Grid.Row="1" Style="{StaticResource StackPanelStatusStyle}">
            <Label x:Name="StatusLabel">
                <TextBlock x:Name="StatusTextBlock">Status</TextBlock>
            </Label>
        </StackPanel>

    </Grid>
</Window>
