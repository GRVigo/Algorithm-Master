<Window x:Name="AlgorithmMasterWindow" x:Class="Algorithm_Master.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Algorithm_Master"
        mc:Ignorable="d"
        Title="Algorithm Master" Height="720" Width="1200" Icon="Art/Cube.ico" Closing="AlgorithmMasterWindow_Closing" KeyDown="AlgorithmMasterWindow_KeyDown" WindowStartupLocation="CenterScreen">
    <!-- Main grid -->
    <Grid x:Name="MainGrid" UseLayoutRounding="True">
        <Grid.RowDefinitions>
            <!-- Tab row -->
            <RowDefinition Height="*"/>
            <!-- Status stack panel -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main tab control -->
        <TabControl Grid.Row="0" x:Name="MainTab" SelectionChanged="MainTab_SelectionChanged">

            <!-- Chronometer TabItem -->
            <TabItem x:Name="ChronoTabItem">

                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Art\Chrono.png" Style="{StaticResource ImageMainTabStyle}"/>
                        <TextBlock x:Name="ChronoTabTitle" Style="{StaticResource TextBlockMainTabStyle}">Chronometer</TextBlock>
                        <StackPanel.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock x:Name="ChronoTabToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Chronometer tool</TextBlock>
                                    <TextBlock x:Name="ChronoTabToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Test your skill solving your Rubik's cube!</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </StackPanel.ToolTip>
                    </StackPanel>
                </TabItem.Header>

                <!-- Main chronometer tab grid -->
                <Grid UseLayoutRounding="True">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Chrono scramble title-->
                        <RowDefinition Height="Auto"/>
                        <!-- Chrono scramble stackpanel-->
                        <RowDefinition Height="*"/>
                        <!-- Chronometer row -->
                    </Grid.RowDefinitions>

                    <!-- Scramble title -->
                    <Grid Grid.Row="0" Style="{StaticResource GridTitleStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"  VerticalAlignment="Center">
                            <TextBlock x:Name="ChronoScrambleTitleText" Style="{StaticResource TextBlockTitleStyle}">Scramble</TextBlock>
                        </Label>

                        <StackPanel Grid.Column="1" x:Name="ChronoScrambleButtonsPanel" Orientation="Horizontal" Margin="0,0,0,4">
                            <Button x:Name="Chrono3DStartButton" Style="{StaticResource ButtonSmallStyle}" FontFamily="Webdings" Content="9" Click="ChronoStartButton_Click">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock x:Name="Chrono3DStartToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Start position</TextBlock>
                                            <TextBlock x:Name="Chrono3DStartToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Set the cube to the scramble start position</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="Chrono3DPreviousButton" Style="{StaticResource ButtonSmallStyle}" FontFamily="Webdings" Content="7" Click="ChronoPreviousButton_Click">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock x:Name="Chrono3DPreviousToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Previous position</TextBlock>
                                            <TextBlock x:Name="Chrono3DPreviousToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Set the cube to the scramble previous position</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="Chrono3DPlayButton" Style="{StaticResource ButtonSmallStyle}" FontFamily="Webdings" Content="4" Click="ChronoPlayButton_Click">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock x:Name="Chrono3DPlayToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Play scramble</TextBlock>
                                            <TextBlock x:Name="Chrono3DPlayToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Set the cube in the start position and plays the scramble until end</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="Chrono3DNextButton" Style="{StaticResource ButtonSmallStyle}" FontFamily="Webdings" Content="8" Click="ChronoNextButton_Click">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock x:Name="Chrono3DNextToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Next position</TextBlock>
                                            <TextBlock x:Name="Chrono3DNextToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Set the cube to the next scramble position</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                            <Button x:Name="Chrono3DEndButton" Style="{StaticResource ButtonSmallStyle}" FontFamily="Webdings" Content=":" Click="ChronoEndButton_Click">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock x:Name="Chrono3DEndToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">End position</TextBlock>
                                            <TextBlock x:Name="Chrono3DEndToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Set the cube in the final scramble position</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>

                            <Separator Width="18" Visibility="Hidden" />

                            <Button x:Name="IncreaseStepsButton" Style="{StaticResource ButtonSmallStyle}" Click="ChronoPlusStepsButton_Click">
                                <TextBlock x:Name="ChronoPlusStepsButton" Style="{StaticResource TextBlockTextStyle}">+</TextBlock>
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock x:Name="ChronoPlusStepsToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Increase steps</TextBlock>
                                            <TextBlock x:Name="ChronoPlusStepToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Increase the number of steps for a new random scramble</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>

                            <Label x:Name="ChronoStepsLabel" Style="{StaticResource LabelStepsStyle}">20</Label>

                            <Button x:Name="DecreaseStepsButton" Style="{StaticResource ButtonSmallStyle}" Click="ChronoMinusStepsButton_Click">
                                <TextBlock x:Name="ChronoMinusStepsButton" Style="{StaticResource TextBlockTextStyle}">-</TextBlock>
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock x:Name="ChronoMinusStepsToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Decrease steps</TextBlock>
                                            <TextBlock x:Name="ChronoMinusStepToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Decrease the number of steps for a new random scramble</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>

                            <Button x:Name="NewRandomScrambleButton" Style="{StaticResource ButtonTextStyle}" Click="ChronoNewRandomButton_Click">
                                <TextBlock x:Name="ChronoNewRandomText">New scramble (random)</TextBlock>
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock x:Name="ChronoNewRandomToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">New random scramble</TextBlock>
                                            <TextBlock x:Name="ChronoNewRandomToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Creates a new random scramble with the selected number of steps</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>

                            <Separator Width="9" Visibility="Hidden" />

                            <Button x:Name="ScrambleFromClipboardButton" Style="{StaticResource ButtonTextStyle}" Click="ChronoFromClipboardButton_Click">
                                <TextBlock x:Name="ChronoFromClipboardText">Scramble from clipboard</TextBlock>
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock x:Name="ChronoFromClipboardToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">New scramble from clipboard</TextBlock>
                                            <TextBlock x:Name="ChronoFromClipboardToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Creates a new scramble with text in the clipboard</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>

                            <Separator Width="9" Visibility="Hidden" />

                            <Button x:Name="NoScrambleButton" Style="{StaticResource ButtonTextStyle}" Click="ChronoNoScrambleButton_Click">
                                <TextBlock x:Name="ChronoNoScrambleText">No scramble</TextBlock>
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock x:Name="ChronoNoScrambleToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">No scramble</TextBlock>
                                            <TextBlock x:Name="ChronoNoScrambleToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Not use an scramble for the chronometer</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>

                            <Button x:Name="CopyScrambleButton" Style="{StaticResource ButtonTextStyle}" Click="CopyScrambleButton_Click">
                                <TextBlock x:Name="ChronoCopyScrambleText">Copy</TextBlock>
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock x:Name="ChronoCopyScrambleToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Copy scramble</TextBlock>
                                            <TextBlock x:Name="ChronoCopyScrambleToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Copy scramble to clipboard</TextBlock>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>

                            <Separator Width="9" Visibility="Hidden" />

                        </StackPanel>
                    </Grid>

                    <!-- Scramble toolbar -->
                    <ToolBarTray Grid.Row="1" x:Name="ChronoScrambleBarTray" Style="{StaticResource ToolBarTrayAlgorithmStyle}">
                        <ToolBar x:Name="ChronoScrambleToolBar" Style="{StaticResource ToolBarAlgorithmStyle}">
                            <Button Style="{StaticResource ScrambleButtonWhiteBackKey}" Content="NONE"/>
                        </ToolBar>
                    </ToolBarTray>

                    <!-- Grid to divide in left/right columns the chronometer row -->
                    <Grid Grid.Row="2" Style="{StaticResource GridDefaultStyle}" UseLayoutRounding="True">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="ChronoViewsColumn" MinWidth="120" Width="320"/>
                            <!-- Left column -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Vertical split -->
                            <ColumnDefinition MinWidth="120"/>
                            <!-- Right column -->
                        </Grid.ColumnDefinitions>

                        <!-- Left column grid -->
                        <Grid Grid.Column="0" UseLayoutRounding="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="240"/>
                                <!-- 3D View / Camera tab -->
                                <RowDefinition Height="Auto"/>
                                <!-- Horizontal split -->
                                <RowDefinition Height="*"/>
                                <!-- 2D View -->
                            </Grid.RowDefinitions>


                            <!-- 3D Viev / camera tab control -->
                            <TabControl Grid.Row="0" x:Name="View3DCameraTab">

                                <!-- View 3D TabItem -->
                                <TabItem x:Name="View3DTabItem">

                                    <TabItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock x:Name="View3DTabTitle" FontWeight="Bold">3D View</TextBlock>
                                            <StackPanel.ToolTip>
                                                <ToolTip>
                                                    <StackPanel>
                                                        <TextBlock x:Name="View3DTabToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Cube's 3D view</TextBlock>
                                                        <TextBlock x:Name="View3DTabToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Displays the cube in 3D</TextBlock>
                                                    </StackPanel>
                                                </ToolTip>
                                            </StackPanel.ToolTip>
                                        </StackPanel>
                                    </TabItem.Header>

                                    <!-- 3D view control -->
                                    <Grid >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <!-- Zoom label / Zoom controls -->
                                            <RowDefinition Height="*"/>
                                            <!-- 3D View -->
                                        </Grid.RowDefinitions>

                                        <!-- Zoom label / Zoom controls -->
                                        <Grid Grid.Row="0" Style="{StaticResource GridTitleStyle}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <!-- Zoom label -->
                                                <ColumnDefinition Width="Auto"/>
                                                <!-- Zoom controls -->
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock x:Name="Chrono3DZoomText" Style="{StaticResource TextBlockTitleStyle}">Zoom</TextBlock>
                                            </Label>
                                            <StackPanel Grid.Column="1" x:Name="Chrono3DButtonsPanel" Orientation="Horizontal">
                                                <Button x:Name="Chrono3DZoomPlusButton" Style="{StaticResource ButtonSmallStyle}" Click="ChronoPlusButton_Click">
                                                    <TextBlock x:Name="Chrono3DZoomPlusText" Style="{StaticResource TextBlockTextStyle}">+</TextBlock>
                                                    <Button.ToolTip>
                                                        <ToolTip>
                                                            <StackPanel>
                                                                <TextBlock x:Name="Chrono3DZoomPlusToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Increase zoom</TextBlock>
                                                                <TextBlock x:Name="Chrono3DZoomPlusToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Increase zoom in cube's 3D view</TextBlock>
                                                            </StackPanel>
                                                        </ToolTip>
                                                    </Button.ToolTip>
                                                </Button>
                                                <Button x:Name="Chrono3DZoomMinusButton" Style="{StaticResource ButtonSmallStyle}" Click="ChronoMinusButton_Click">
                                                    <TextBlock x:Name="Chrono3DZoomMinusText" Style="{StaticResource TextBlockTextStyle}">-</TextBlock>
                                                    <Button.ToolTip>
                                                        <ToolTip>
                                                            <StackPanel>
                                                                <TextBlock x:Name="Chrono3DZoomMinusToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Decrease zoom</TextBlock>
                                                                <TextBlock x:Name="Chrono3DZoomMinusToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Decrease zoom in cube's 3D view</TextBlock>
                                                            </StackPanel>
                                                        </ToolTip>
                                                    </Button.ToolTip>
                                                </Button>
                                            </StackPanel>
                                        </Grid>

                                        <!-- 3D View -->
                                        <Image Grid.Row="1" x:Name="ChronoImage3D" Stretch="Fill" SizeChanged="ChronoImage3D_SizeChanged" MouseDown="ChronoImage3D_MouseDown" MouseLeave="ChronoImage3D_MouseLeave" MouseEnter="ChronoImage3D_MouseEnter" MouseMove="ChronoImage3D_MouseMove"/>

                                    </Grid>

                                </TabItem>

                                <!-- Camera TabItem -->
                                <TabItem x:Name="CameraTabItem">

                                    <TabItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock x:Name="CameraTabTitle" FontWeight="Bold">Camera</TextBlock>
                                            <StackPanel.ToolTip>
                                                <ToolTip>
                                                    <StackPanel>
                                                        <TextBlock x:Name="CameraTabToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Camera control</TextBlock>
                                                        <TextBlock x:Name="CameraTabToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Use a webcam to record your solves</TextBlock>
                                                    </StackPanel>
                                                </ToolTip>
                                            </StackPanel.ToolTip>
                                        </StackPanel>
                                    </TabItem.Header>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <ComboBox x:Name="CamerasComboBox" Width="120" Style="{StaticResource ComboBoxDefaultStyle}" SelectionChanged="CamerasComboBox_SelectionChanged">
                                                    <ComboBox.ToolTip>
                                                        <ToolTip>
                                                            <StackPanel>
                                                                <TextBlock x:Name="CamerasComboBoxToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Select camera</TextBlock>
                                                                <TextBlock x:Name="CamerasComboBoxToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Select a webcam to record your solves</TextBlock>
                                                            </StackPanel>
                                                        </ToolTip>
                                                    </ComboBox.ToolTip>
                                                </ComboBox>
                                                <Separator Width="12" Visibility="Hidden"/>
                                                <Button x:Name="CameraPlayButton" Style="{StaticResource ButtonSmallStyle}" FontFamily="Webdings" Content="4" IsEnabled="False" Click="CameraPlayButton_Click">
                                                    <Button.ToolTip>
                                                        <ToolTip>
                                                            <StackPanel>
                                                                <TextBlock x:Name="CameraPlayToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Start camera</TextBlock>
                                                                <TextBlock x:Name="CameraPlayToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Initializes and starts the camera</TextBlock>
                                                            </StackPanel>
                                                        </ToolTip>
                                                    </Button.ToolTip>
                                                </Button>
                                                <Separator Width="4" Visibility="Hidden"/>
                                                <Button x:Name="CameraStopButton"  Style="{StaticResource ButtonSmallStyle}" FontFamily="Webdings" Content="&lt;" IsEnabled="False" Click="CameraStopButton_Click">
                                                    <Button.ToolTip>
                                                        <ToolTip>
                                                            <StackPanel>
                                                                <TextBlock x:Name="CameraStopToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Stop camera</TextBlock>
                                                                <TextBlock x:Name="CameraStopToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Stops the camera</TextBlock>
                                                            </StackPanel>
                                                        </ToolTip>
                                                    </Button.ToolTip>
                                                </Button>

                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                <CheckBox x:Name="SaveVideoCheckBox" IsEnabled="False" Unchecked="SaveVideoCheckBox_Unchecked" Margin="0,0,8,0">
                                                    <TextBlock x:Name="SaveVideoCheckBoxText" Style="{StaticResource TextBlockDefaultStyle}">Save video</TextBlock>
                                                    <CheckBox.ToolTip>
                                                        <ToolTip>
                                                            <StackPanel>
                                                                <TextBlock x:Name="SaveVideoCheckBoxToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Save video</TextBlock>
                                                                <TextBlock x:Name="SaveVideoCheckBoxToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Save video while solving</TextBlock>
                                                            </StackPanel>
                                                        </ToolTip>
                                                    </CheckBox.ToolTip>
                                                </CheckBox>
                                            </StackPanel>
                                        </Grid>

                                        <Image Grid.Row="1" x:Name="CamImage" RenderTransformOrigin="0.5,0.5" Source="Art/CamWarning.png">
                                            <Image.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                    <SkewTransform/>
                                                    <RotateTransform Angle="180"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </Image.RenderTransform>
                                            <Image.ToolTip>
                                                <ToolTip>
                                                    <StackPanel>
                                                        <TextBlock x:Name="CamImageToolTipHeader" Style="{StaticResource TextBlockToolTipHeaderStyle}">Camera is an experimental feature!!!</TextBlock>
                                                        <TextBlock x:Name="CamImageToolTipBody" Style="{StaticResource TextBlockToolTipBodyStyle}">Camera don't work in some systems and video frame rate is very inaccurate</TextBlock>
                                                    </StackPanel>
                                                </ToolTip>
                                            </Image.ToolTip>
                                        </Image>

                                    </Grid>
                                </TabItem>

                            </TabControl>

                            <!-- Horizontal split -->
                            <GridSplitter Grid.Row="1" Style="{StaticResource GridSplitterHorizontalStyle}">
                                <GridSplitter.Template>
                                    <ControlTemplate TargetType="{x:Type GridSplitter}">
                                        <Grid>
                                            <Button/>
                                            <Rectangle Fill="#00FFFFFF" />
                                        </Grid>
                                    </ControlTemplate>
                                </GridSplitter.Template>
                            </GridSplitter>

                            <!-- 2D label & 2D view -->
                            <Grid Grid.Row="2">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- 2D label -->
                                    <RowDefinition Height="*"/>
                                    <!-- 2D view -->
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Style="{StaticResource GridTitleStyle}">
                                    <Label>
                                        <TextBlock x:Name="Chrono2DViewText" Style="{StaticResource TextBlockTitleStyle}">2D View</TextBlock>
                                    </Label>
                                </Grid>

                                <!-- Grid with stickers array -->
                                <Grid Grid.Row="1" x:Name="Chrono2DGrid" UseLayoutRounding="True" ShowGridLines="False">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="6*"/>
                                        <ColumnDefinition Width="6*"/>
                                        <ColumnDefinition Width="6*"/>
                                        <ColumnDefinition Width="6*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- U face -->
                                    <Grid Grid.Row="1" Grid.Column="2" x:Name="Chrono_B2D_Reference_Width" Height="{Binding ElementName=Chrono_B2D_Reference_Width, Path=ActualWidth}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Button x:Name="Chrono_B2D_UBL_U" Grid.Row="0" Grid.Column="0" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_UB_U" Grid.Row="0" Grid.Column="1" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_UBR_U" Grid.Row="0" Grid.Column="2" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_UL_U" Grid.Row="1" Grid.Column="0" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_U" Grid.Row="1" Grid.Column="1" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_UR_U" Grid.Row="1" Grid.Column="2" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_UFL_U" Grid.Row="2" Grid.Column="0" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_UF_U" Grid.Row="2" Grid.Column="1" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_UFR_U" Grid.Row="2" Grid.Column="2" Style="{StaticResource Button2DStyle}"/>
                                    </Grid>

                                    <!-- L face -->
                                    <Grid Grid.Row="2" Grid.Column="1" Height="{Binding ElementName=Chrono_B2D_Reference_Width, Path=ActualWidth}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Button x:Name="Chrono_B2D_UBL_L" Grid.Row="0" Grid.Column="0" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_UL_L" Grid.Row="0" Grid.Column="1" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_UFL_L" Grid.Row="0" Grid.Column="2" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_BL_L" Grid.Row="1" Grid.Column="0" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_L" Grid.Row="1" Grid.Column="1" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_LF_L" Grid.Row="1" Grid.Column="2" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_DBL_L" Grid.Row="2" Grid.Column="0" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_DL_L" Grid.Row="2" Grid.Column="1" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_DFL_L" Grid.Row="2" Grid.Column="2" Style="{StaticResource Button2DStyle}"/>
                                    </Grid>

                                    <!-- F face -->
                                    <Grid Grid.Row="2" Grid.Column="2" Height="{Binding ElementName=Chrono_B2D_Reference_Width, Path=ActualWidth}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Button x:Name="Chrono_B2D_UFL_F" Grid.Row="0" Grid.Column="0" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_UF_F" Grid.Row="0" Grid.Column="1" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_UFR_F" Grid.Row="0" Grid.Column="2" Style="{StaticResource Button2DStyle}"/>
                                        <Button x:Name="Chrono_B2D_LF_F" Grid.Row="1" Grid.Column="0" Style="{StaticResource Button2DStyle}"/>
